<Window x:Class="InteractivePeriodicTable.ScoreBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractivePeriodicTable"
        mc:Ignorable="d"
        Title="ScoreBoard" Height="500" Width="500">
    <Grid Background="LightBlue">
        <StackPanel x:Name="scoreboard" Margin="0,41,0,51" FlowDirection="LeftToRight"></StackPanel>
        <Label x:Name="label" Content="Top 10 players" Foreground="Blue" HorizontalAlignment="Left" Margin="202,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="close" Content="Close" HorizontalAlignment="Left" Margin="214,425,0,0" VerticalAlignment="Top" Width="75" Click="close_Click" Background="DeepSkyBlue" Foreground="Blue"/>

    </Grid>
</Window>
