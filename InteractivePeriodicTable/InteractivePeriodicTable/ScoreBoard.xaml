<Window x:Class="InteractivePeriodicTable.ScoreBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractivePeriodicTable"
        mc:Ignorable="d"
        Title="Scoreboard" Height="379.371" Width="241.559" Icon="/Resources/Images/Ikona.ico" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" FontSize="13.333">
    <Window.Background>
        <ImageBrush ImageSource="Resources/Images/q1.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid Margin="0,0,2,-1" Opacity="0.9">
        <Grid.Background>
            <ImageBrush ImageSource="Resources/Images/q1.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel x:Name="scoreboardStackPanel" Margin="10,51,10.5,52.5" FlowDirection="LeftToRight">
            <DataGrid x:Name="scoreBoard" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False" IsReadOnly="True" Background="#FF7BE1EB" RowBackground="DarkTurquoise" Foreground="MidnightBlue" FontWeight="Bold" HorizontalGridLinesBrush="MidnightBlue" VerticalGridLinesBrush="MidnightBlue" HeadersVisibility="None" HorizontalScrollBarVisibility="Disabled"/>
        </StackPanel>
        <Label x:Name="label" Content="Top 10 players" Foreground="DarkTurquoise" HorizontalAlignment="Left" Margin="63,10,0,0" VerticalAlignment="Top" FontWeight="Bold" RenderTransformOrigin="0.188,0.608"/>
        <Button x:Name="close" Content="Close" HorizontalAlignment="Left" Margin="73,281,0,0" VerticalAlignment="Top" Width="75" Click="close_Click" Background="DarkTurquoise" Foreground="MidnightBlue" BorderBrush="#FFC32D2D" BorderThickness="2" IsCancel="True" IsDefault="True"/>

    </Grid>
</Window>
