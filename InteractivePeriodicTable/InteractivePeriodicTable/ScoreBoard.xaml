<Window x:Class="InteractivePeriodicTable.ScoreBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractivePeriodicTable"
        mc:Ignorable="d"
        Title="Scoreboard" Height="379.371" Width="258.32" Icon="/Resources/Images/Ikona.ico" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" FontSize="13.333">
    <Grid Background="#FFD7F8FF" Margin="0,0,2,-1">
        <StackPanel x:Name="scoreboardStackPanel" Margin="10,36,10,68" FlowDirection="LeftToRight">
            <DataGrid x:Name="scoreBoard" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False" IsReadOnly="True"/>
        </StackPanel>
        <Label x:Name="label" Content="Top 10 players" Foreground="Blue" HorizontalAlignment="Left" Margin="74,6,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="close" Content="Close" HorizontalAlignment="Left" Margin="82,288,0,0" VerticalAlignment="Top" Width="75" Click="close_Click" Background="#FFABE4F7" Foreground="#FFC32D2D" BorderBrush="#FFC32D2D" BorderThickness="2" IsCancel="True" IsDefault="True"/>

    </Grid>
</Window>
