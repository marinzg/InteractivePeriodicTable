<Window x:Class="InteractivePeriodicTable.SaveScorePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractivePeriodicTable"
        mc:Ignorable="d"
        Title="SaveScorePrompt" Height="300" Width="300">
    <Grid>
        <Label x:Name="score_lbl" Content="" HorizontalAlignment="Left" Margin="90,54,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.225,0.536"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="23" Margin="110,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="User name:" HorizontalAlignment="Left" Margin="41,101,0,0" VerticalAlignment="Top"/>
        <Button x:Name="save" Content="Save" HorizontalAlignment="Left" Margin="172,186,0,0" VerticalAlignment="Top" Width="75" Click="save_Click"/>
        <Button x:Name="cancel" Content="Cancel" HorizontalAlignment="Left" Margin="49,186,0,0" VerticalAlignment="Top" Width="75" Click="cancel_Click"/>

    </Grid>
</Window>
